<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choice_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01963E">

        <TextView
            android:id="@+id/create_menu_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="추가 선택"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choice_add_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_top"
        android:layout_above="@id/add_bottom_square"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:id="@+id/add_bottom_square"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FEC70B"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/chosen1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/list_card_detail_green_shape"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="샌드위치"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/chosen2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/list_card_detail_green_shape"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="샌드위치"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/chosen1"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/chosen3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/list_card_detail_green_shape"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="샌드위치"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/chosen2"
            android:visibility="invisible"
            />

        <android.widget.Button
            android:id="@+id/ad_btn_end"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="완료!"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#01963E"
            android:gravity="center"
            android:background="@drawable/create_menu_circle_button"
            />

    </RelativeLayout>


</RelativeLayout>