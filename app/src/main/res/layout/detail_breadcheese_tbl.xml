<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cAndc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    tools:layout_editor_absoluteX="-11dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/cheeseImg"
        android:layout_width="128dp"
        android:layout_height="104dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/americancheese" />

    <TextView
        android:id="@+id/cheeseName"
        android:layout_width="126dp"
        android:layout_height="29dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="아메리칸치즈"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cheeseImg" />

    <ImageView
        android:id="@+id/breadImg"
        android:layout_width="128dp"
        android:layout_height="104dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/americancheese" />

    <TextView
        android:id="@+id/breadName"
        android:layout_width="126dp"
        android:layout_height="29dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="아메리칸치즈"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/breadImg" />
</androidx.constraintlayout.widget.ConstraintLayout>