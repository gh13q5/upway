<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_card_shape"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/item_main"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="4.5"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/italian_bmt" />

        <LinearLayout
            android:id="@+id/main_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="이탈리안 비엠티"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/main_kcal_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1387.7 kcal  /  8,000 won"
                android:textColor="#707070"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:background="@drawable/button_views_shape"
            android:text="+519"
            android:textColor="#FEC70B"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/bread_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bread_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_card_title_shape"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:text="빵"
                android:textColor="#01963E"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bread_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_green_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="플랫브레드"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cheese_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cheese_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_card_title_shape"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:text="치즈"
                android:textColor="#FEC70B"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cheese_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_yellow_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="아메리칸"
                android:textColor="#383838"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vege_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vege_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_card_title_shape"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:text="야채"
                android:textColor="#01963E"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/vege_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_green_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="-토마토"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/vege_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_green_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="-피클"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sauce_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sauce_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_card_title_shape"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:text="소스"
                android:textColor="#FEC70B"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sauce_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_yellow_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="스모크 바비큐"
                android:textColor="#383838"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sauce_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_yellow_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="스위트 칠리"
                android:textColor="#383838"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="+"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_card_detail_green_shape"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="에그마요"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>